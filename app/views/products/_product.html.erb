<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
    <% unless in_stock?(product) %>
    <button type="button" class="soldout" disabled>Sold out</button>
    <% end %>
    <%= button_to add_item_cart_path(product_id: product.id), class: in_stock?(product) ? "btn" : 'btn disabled',
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
</article>
